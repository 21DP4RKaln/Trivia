APP_NAME="Number Trivia Game"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=trivia
DB_USERNAME=root
DB_PASSWORD=

# For SQLite (alternative for development):
# DB_CONNECTION=sqlite
# DB_DATABASE=/absolute/path/to/database.sqlite

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration
# For development, use 'log' to save emails to storage/logs/laravel.log
# For production, use 'smtp' with your email provider settings
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@triviagame.com"
MAIL_FROM_NAME="Number Trivia Game"

# Alternative Email Providers:
# Gmail: smtp.gmail.com, port 587, encryption: tls
# Outlook: smtp-mail.outlook.com, port 587, encryption: tls  
# Yahoo: smtp.mail.yahoo.com, port 587, encryption: tls
# Custom SMTP: your-smtp-server.com, port 587, encryption: tls

# Gmail Setup Instructions:
# 1. Enable 2-Factor Authentication on your Google account
# 2. Go to Google Account Settings > Security > App passwords
# 3. Generate a new app password for "Mail"
# 4. Use the app password in MAIL_PASSWORD (not your regular password)

# Trivia Game Configuration
# Maximum questions per game session
TRIVIA_MAX_QUESTIONS=20

# Time limit per question in seconds (0 = no limit)
TRIVIA_TIME_LIMIT=30

# Enable/disable guest play (users without accounts)
TRIVIA_ALLOW_GUEST=true

# Session timeout for saved games (in minutes)
TRIVIA_SESSION_TIMEOUT=60

# Rate limiting for password reset emails (requests per minute)
PASSWORD_RESET_RATE_LIMIT=5

# Admin email for notifications
ADMIN_EMAIL=admin@triviagame.com

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"
